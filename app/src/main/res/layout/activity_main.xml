<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="openIntroduction"
            android:src="@drawable/ic_introduction" />

        <ImageView
            android:id="@+id/iv_instractions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="openInstructions"
            android:src="@drawable/ic_instructions" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="enter"
            android:src="@drawable/ic_enter" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1">
        <Button
            android:id="@+id/tv_explanation"
            android:layout_width="0dp"
            android:layout_height="@dimen/pageButtonHeight"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/btn_enable"
            android:onClick="openExplanationList"
            android:text="@string/explanation_download"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txtMedium" />
        <Button
            android:id="@+id/tv_reading"
            android:layout_width="0dp"
            android:layout_height="@dimen/pageButtonHeight"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/btn_enable"
            android:onClick="openReadingList"
            android:text="@string/readings_download"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txtMedium" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="openWebsite"
            android:scaleType="fitXY"
            android:src="@drawable/ic_website" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="openEmail"
            android:scaleType="fitXY"
            android:src="@drawable/ic_email" />
    </LinearLayout>

</LinearLayout>